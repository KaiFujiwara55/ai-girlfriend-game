{
  "name": "ai-girlfriend-game",
  "version": "1.0.0",
  "type": "module",
  "description": "CLI-based AI girlfriend confession game with deep character interactions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:linebot": "node dist/line-bot-server.js",
    "dev": "ts-node --esm src/index.ts",
    "dev:linebot": "ts-node --esm src/line-bot-server.ts",
    "test": "ts-node --esm src/test/test-runner.ts",
    "test:manual": "ts-node --esm src/test/manual-test.ts",
    "test:simulation": "ts-node --esm src/test/simulation-test.ts",
    "test:gemini": "ts-node --esm src/test/gemini-test.ts",
    "test:live": "ts-node --esm src/test/gemini-live-test.ts",
    "test:all": "npm test && npm run test:manual && npm run test:simulation && npm run test:gemini",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "game",
    "cli",
    "typescript",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@line/bot-sdk": "^10.1.2",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "openai": "^4.24.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  }
}
